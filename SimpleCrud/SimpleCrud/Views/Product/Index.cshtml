@model IEnumerable<SimpleCrud.Models.ProductModel>

<p>
    <a asp-action="Create" class="text-light">Create New</a>
</p>

<div class="container d-flex flex-wrap">
    @foreach(var item in Model)
    {
        var fullName = item.Name;
        var firstWord = fullName.IndexOf(" ") > 0 ? fullName.Substring(0, fullName.IndexOf(" ")) : fullName;

        //get substring of Description
    <div class="card m-3 border-0 bg-light" style="width: 18rem;">
        <img class="card-img-top" src="https://loremflickr.com/320/250/@firstWord?lock=@item.Id" alt="@item.Name">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <p class="card-text">$@item.Price</p>
            
            <p class="card-text">@item.Description.Substring(0, 60)</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
    }
</div>

